		return cost;
	}

	public void setCost(double cost) {
		this.cost = cost;
	}

	public double getSalePrice() {
		return salePrice;
	}

	public void setSalePrice(double salePrice) {
		this.salePrice = salePrice;
	}

	public int getSellBy() {
		return sellBy;
	}

	public void setSellBy(int sellBy) {
		this.sellBy = sellBy;
	}

