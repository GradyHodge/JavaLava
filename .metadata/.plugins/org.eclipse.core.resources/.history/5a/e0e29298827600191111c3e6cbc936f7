//testing methods with JUnit
package junit;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

class JUnitTest {

	
	
	
/////////////////////////////////////////////////////////////////
	@Test
	void test1() {
	Humanology bobbyHill = new Humanology("bob", 2, true, 100, 100, 100, 2, 5);
	assertEquals(110, bobbyHill.gethungerLevel);//? doesn't pass because ... method doesn't have return?
	assertEquals("bob", bobbyHill.getName());//works
	assertEquals(2, bobbyHill.getEyes());//works
	assertEquals(true, bobbyHill.isCoder());//works, boolean getter = "isCoder"
	}

/////////////////////////////////////////////////////////////////
	
	
	
/////////////////////////////////////////////////////////////////

	
	
/////////////////////////////////////////////////////////////////

	
	
/////////////////////////////////////////////////////////////////

	
	
/////////////////////////////////////////////////////////////////

	@Test
	public void whenAssertingArraysEquality_thenEqual() {
	    char[] expected = {'J','u','n','i','t'};
	    char[] actual = "Junit".toCharArray();
	     
	    assertArrayEquals(expected, actual);
	}

	
	
/////////////////////////////////////////////////////////////////

	
	
/////////////////////////////////////////////////////////////////

	
	
/////////////////////////////////////////////////////////////////

	
	
/////////////////////////////////////////////////////////////////

	
	
/////////////////////////////////////////////////////////////////

	
}//endClassSTOP
